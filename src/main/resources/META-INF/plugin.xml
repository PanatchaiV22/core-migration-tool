<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.panatchaiv22.coremigrationtool</id>
    <name>Core Migration Tool</name>
    <vendor>panatchaiv22</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService
                serviceImplementation="com.github.panatchaiv22.coremigrationtool.services.MyApplicationService"/>
        <projectService serviceImplementation="com.github.panatchaiv22.coremigrationtool.services.MyProjectService"/>
        <notificationGroup id="com.github.panatchaiv22.coremigrationtool"
                           displayType="BALLOON"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.panatchaiv22.coremigrationtool.listeners.MyProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </applicationListeners>

    <actions>

        <action id="OrderFood" class="com.github.panatchaiv22.coremigrationtool.CoreMigration"
                text="Migrate Core"
                icon="AllIcons.Duplicates.SendToTheRight">

            <add-to-group group-id="RefactoringMenu" anchor="last"/>
        </action>

    </actions>
</idea-plugin>
